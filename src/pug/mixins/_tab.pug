mixin tab_navegator_out_text(tab_list,prefijo,clase_contendor,clase_extra)
  div(class="e-tab__navegator e-tab__"+prefijo+"nav animation-l e-flex "+clase_extra)
    each tab, index in tab_list
      .e-tab__button-group
        a(
          class="e-datalayer__botton e-tab__button e-tab__texto--personas__button-css e-box-inline-block"
          class={'js--active': index === 0}
          href="#"+prefijo + index
          data-contenedor=clase_contendor
          data-gtm-category=tab.category
          data-gtm-action="Visualizar contenido – Tabs informativos"
          data-gtm-label=tab.nameData
          title="Ir a "+ tab.name
          data-lugar = tab.data_lugar
          data-action = `Selección tab - ${tab.name}`
          data-tipoproducto =tab.tipoproducto
          id=tab.id
          ) 
          if tab.icon
            -
              lstdata = [
                {
                'image' : tab.icon,
                'media' : '1280',
                },
                {
                'image' : tab.icon+"-mob",
                'media' : '0',
                },
              ]
            +image_retina_media(lstdata,'png', tab.name).js--block__normal
          if tab.icon_active
            -
              lstdata = [
                {
                'image' : tab.icon_active,
                'media' : '1280',
                },
                {
                'image' : tab.icon_active+"-mob",
                'media' : '0',
                },
              ]
            +image_retina_media(lstdata,'png', tab.name).js--block__active
        div.e-tab__button-text !{tab.name}

