mixin tab_container(tab_list, type)
  each tab, index in tab_list                    
    div(
      id="tab-" + index
      class="m-tab__content"
      class={'js--open': index === 0}
      data-contenedor="m-tab__container"
      )
      if type
        div(
          class="m-tab__toggle m-tab__mobile m-tab__mobile--inactive"
          class=(index == 0 ? "m-tab__mobile--active" : "")
          data-contenedor="m-tab__container"
          ) 
          if block
            block
      else
        if block
          block
mixin tab_nav(tab_list)
  .e-tab__texto--personas__nav.animation-l.e-flex
    each tab, index in tab_list
      a(
        class="e-tab__button e-tab__texto--personas__button-css e-box-inline-block entel-data-layer-toggle"
        class={'js--active': index === 0}
        href="#tab-texto-" + index
        data-contenedor="e-tab__texto--personas"
        data-gtm-category=tab.category
        data-gtm-action="Visualizar contenido – Tabs informativos"
        data-gtm-label=tab.nameData
        title="Ir a "+ tab.name
        id=tab.id
        ) 
        span !{tab.name}
